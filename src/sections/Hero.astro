---
import { useTranslation } from "../lib/useTranslation";
import MainHeroCard from "../components/MainHeroCard.astro";

const t = useTranslation();
---

<header class="container grid grid-cols-12 grid-rows-1 md:grid-rows-2 gap-4">
  <MainHeroCard />

  <div
    class="flex flex-col gap-4 col-span-12 md:col-span-4 row-span-1 bg-elevated border-[1px] border-slate-800 rounded-3xl overflow-hidden p-4"
  >
    <h2><b>{t("hero.aboutTitle")}</b></h2>
    <p class="text-gray-400">
      {t("hero.aboutDescription1")}
    </p>
    <p class="text-gray-400" set:html={t("hero.aboutDescription2")} />
  </div>
  <div
    class="flex flex-col col-span-6 md:col-span-2 row-span-1 bg-elevated border-[1px] border-slate-800 rounded-3xl overflow-hidden p-4"
  >
    <span class="text-center text-5xl text-white font-semibold my-auto">+5</span
    >
    <span class="text-gray-400 text-center">{t("hero.yearsOfExperience")}</span>
  </div>
  <div
    class="flex flex-col col-span-6 md:col-span-2 row-span-1 bg-elevated border-[1px] border-slate-800 rounded-3xl overflow-hidden p-4"
  >
    <span class="text-center text-5xl text-white font-semibold my-auto"
      >+60K</span
    >
    <span class="text-gray-400 text-center">{t("hero.usersreached")}</span>
  </div>
</header>

---
import EXPERIENCE from "../constants/experience";
---

<section id="experience" class="container py-8">
  <h1 class="text-4xl font-semibold mb-10">Work Experience</h1>

  {
    EXPERIENCE.map((experience) => (
      <div class="flex flex-row gap-2 px-2 md:px-10 justify-start md:justify-center">

---
const { project } = Astro.props;
---

<a
  href={project.href}
  target="_blank"
  class="group flex flex-col h-full items-center text-white hover:cursor-pointer bg-elevated rounded-2xl overflow-hidden hover:bg-elevated-2 transition-colors"
>
  <img
    class="w-full max-h-60 object-cover relative z-0 group-hover:scale-110 transition-transform duration-200 ease-in-out"
    src={project.img}
    alt={project.title}
    height="200px"
    width="100%"
  />

  <div
    class="p-4 bg-elevated relative z-10 group-hover:bg-elevated-2 transition-colors"
  >
    <h3 class="font-semibold text-xl mb-6">{project.title}</h3>
    <p class="text-gray-400 text-start">{project.description}</p>
  </div>
</a>
